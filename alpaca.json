{
  "strategy": {
    "tickers": ["TQQQ", "QQQ", "SPY"],
    "interval": "5m",
    "period": "1d",

    "entry_conditions": {
      "use_rsi": true,
      "rsi_threshold": 30,
      "use_ema_cross_up": false,
      "use_bb_cross_up": false,
      "use_macd_cross_up": false,
      "use_price_vs_ema9": false,
      "use_price_vs_ema21": false,
      "use_macd_threshold": true,
      "macd_threshold": 0.1,
      "use_macd_valley": true,
      "use_ema": false,
      "use_volume": false
    },

    "exit_conditions": {
      "use_rsi_exit": true,
      "rsi_exit_threshold": 70,
      "use_ema_cross_down": false,
      "use_bb_cross_down": false,
      "use_macd_cross_down": false,
      "use_price_vs_ema9_exit": false,
      "use_price_vs_ema21_exit": false,
      "use_macd_peak": true
    },

    "risk_management": {
      "stop_loss": 0.02,
      "take_profit": 0.03,
      "use_stop_loss": true,
      "use_take_profit": false
    },

    "trading": {
      "position_size": 100,
      "check_interval_seconds": 120
    }
  },

  "signal_actions": {
    "tickers": {
      "TQQQ": {
        "enabled": true,
        "default_quantity": 100,
        "entry": {
          "enabled": true,
          "actions": [
            {
              "type": "BUY",
              "ticker": "TQQQ",
              "quantity": 100,
              "description": "Buy TQQQ on TQQQ entry signal"
            },
            {
              "type": "SELL_ALL",
              "ticker": "SQQQ",
              "description": "Sell SQQQ on TQQQ entry signal"
            }
          ],
          "description": "TQQQ entry signal - Go long"
        },
        "exit_conditions_met": {
          "enabled": true,
          "actions": [
            {
              "type": "SELL_ALL",
              "ticker": "TQQQ",
              "description": "Sell TQQQ on TQQQ exit signal"
            },
            {
              "type": "BUY",
              "ticker": "SQQQ",
              "quantity": 100,
              "description": "Buy SQQQ on TQQQ exit signal"
            }
          ],
          "description": "TQQQ exit conditions met - Go short"
        },
        "exit_SL": {
          "enabled": true,
          "actions": [
            {
              "type": "SELL_ALL",
              "ticker": "TQQQ",
              "description": "Sell TQQQ on stop loss"
            }
          ],
          "description": "TQQQ stop loss triggered"
        },
        "exit_TP": {
          "enabled": false,
          "actions": [],
          "description": "TQQQ take profit (disabled)"
        },
        "exit_EOD": {
          "enabled": false,
          "actions": [],
          "description": "End of data (backtest artifact) - Ignore"
        },
        "oversold_alert": {
          "enabled": false,
          "actions": [],
          "description": "Oversold alert - Informational only"
        },
        "overbought_alert": {
          "enabled": false,
          "actions": [],
          "description": "Overbought alert - Informational only"
        }
      },

      "QQQ": {
        "enabled": false,
        "default_quantity": 100,
        "entry": {
          "enabled": false,
          "actions": [
            {
              "type": "BUY",
              "ticker": "TQQQ",
              "quantity": 100,
              "description": "Buy TQQQ on QQQ entry signal"
            },
            {
              "type": "SELL_ALL",
              "ticker": "SQQQ",
              "description": "Sell SQQQ on QQQ entry signal"
            }
          ],
          "description": "QQQ entry signal - Go long on leveraged"
        },
        "exit_conditions_met": {
          "enabled": false,
          "actions": [
            {
              "type": "SELL_ALL",
              "ticker": "TQQQ",
              "description": "Sell TQQQ on QQQ exit signal"
            },
            {
              "type": "BUY",
              "ticker": "SQQQ",
              "quantity": 100,
              "description": "Buy SQQQ on QQQ exit signal"
            }
          ],
          "description": "QQQ exit conditions met - Go short on leveraged (DISABLED)"
        },
        "exit_SL": {
          "enabled": false,
          "actions": [
            {
              "type": "SELL_ALL",
              "ticker": "TQQQ",
              "description": "Sell TQQQ on QQQ stop loss"
            }
          ],
          "description": "QQQ stop loss triggered (DISABLED)"
        },
        "exit_TP": {
          "enabled": false,
          "actions": [],
          "description": "QQQ take profit (disabled)"
        },
        "exit_EOD": {
          "enabled": false,
          "actions": [],
          "description": "End of data - Ignore"
        },
        "oversold_alert": {
          "enabled": false,
          "actions": [],
          "description": "Oversold alert - Informational only"
        },
        "overbought_alert": {
          "enabled": false,
          "actions": [],
          "description": "Overbought alert - Informational only"
        }
      },

      "SPY": {
        "enabled": true,
        "default_quantity": 100,
        "entry": {
          "enabled": true,
          "actions": [
            {
              "type": "BUY",
              "ticker": "UPRO",
              "quantity": 100,
              "description": "Buy UPRO on SPY entry signal"
            },
            {
              "type": "SELL_ALL",
              "ticker": "SPXS",
              "description": "Sell SPXS on SPY entry signal"
            }
          ],
          "description": "SPY entry signal - Go long on leveraged"
        },
        "exit_conditions_met": {
          "enabled": true,
          "actions": [
            {
              "type": "SELL_ALL",
              "ticker": "UPRO",
              "description": "Sell UPRO on SPY exit signal"
            },
            {
              "type": "BUY",
              "ticker": "SPXS",
              "quantity": 100,
              "description": "Buy SPXS on SPY exit signal"
            }
          ],
          "description": "SPY exit conditions met - Go short on leveraged"
        },
        "exit_SL": {
          "enabled": true,
          "actions": [
            {
              "type": "SELL_ALL",
              "ticker": "UPRO",
              "description": "Sell UPRO on SPY stop loss"
            }
          ],
          "description": "SPY stop loss triggered"
        },
        "exit_TP": {
          "enabled": false,
          "actions": [],
          "description": "SPY take profit (disabled)"
        },
        "exit_EOD": {
          "enabled": false,
          "actions": [],
          "description": "End of data - Ignore"
        },
        "oversold_alert": {
          "enabled": false,
          "actions": [],
          "description": "Oversold alert - Informational only"
        },
        "overbought_alert": {
          "enabled": false,
          "actions": [],
          "description": "Overbought alert - Informational only"
        }
      }
    },

    "default": {
      "entry": {
        "enabled": true,
        "actions": [],
        "description": "Default entry - no actions (fallback)"
      },
      "exit_conditions_met": {
        "enabled": true,
        "actions": [],
        "description": "Default exit - no actions (fallback)"
      },
      "exit_SL": {
        "enabled": true,
        "actions": [],
        "description": "Default stop loss - no actions (fallback)"
      },
      "exit_TP": {
        "enabled": false,
        "actions": [],
        "description": "Default take profit (disabled)"
      },
      "exit_EOD": {
        "enabled": false,
        "actions": [],
        "description": "End of data - Ignore"
      },
      "oversold_alert": {
        "enabled": false,
        "actions": [],
        "description": "Oversold alert - Informational only"
      },
      "overbought_alert": {
        "enabled": false,
        "actions": [],
        "description": "Overbought alert - Informational only"
      }
    }
  },

  "workflow": {
    "clear_positions_before_actions": false,
    "save_state_before_actions": true,
    "log_pnl_on_exit": true
  },

  "notes": "Unified configuration file for Alpaca trading bot. Contains strategy settings (monitored tickers, entry/exit conditions, risk management) and signal actions (what to do when each ticker generates a signal). Each monitored ticker can have different actions for the same signal type."
}
